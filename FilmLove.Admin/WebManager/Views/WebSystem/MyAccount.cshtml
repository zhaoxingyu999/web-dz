@model FilmLove.Admin.WebManager.Models.WebSysManager
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "MyAccount";
}
@Html.Partial("_nav", new FilmLove.Admin.CommEntity.ResEntities.NavigationModel("我的账号", "个人信息修改"))
<div class="row bgwhitebox10 mymgb15">
    <div class="mysearchbox">
        <label>个人信息修改</label>
    </div>
    <div class="row mt30 mtop15">
        <div class="row rowmb5">
            <div class="col-md-12">
                <label class="col-sm-2 edit-group-label">用户名：</label>
                <div class="col-md-7">
                    <span class="edit-group-spanl">@Model.ManagerName</span>
                </div>
            </div>
        </div>
        <div class="row rowmb5">
            <div class="col-md-12">
                <label class="col-sm-2 edit-group-label"><span class="spanrequired">*</span> 真实姓名：</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.ManagerRealname, new { @class = "form-control", placeholder = "真实姓名" })
                </div>
            </div>
        </div>
        <div class="row rowmb5">
            <div class="col-md-12">
                <label class="col-sm-2 edit-group-label"><span class="spanrequired">*</span> 邮箱：</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.ManagerEmail, new { @class = "form-control", placeholder = "邮箱" })
                </div>
            </div>
        </div>
        <div class="row rowmb5">
            <div class="col-md-12">
                <label class="col-sm-2 edit-group-label"><span class="spanrequired">*</span> 联系电话：</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.ManagerTel, new { @class = "form-control", placeholder = "联系电话" })
                </div>
            </div>
        </div>
        <div class="row rowmb5">
            <div class="col-md-12">
                <label class="col-sm-2 edit-group-label"> 密码：</label>
                <div class="col-md-3">
                    @Html.Password("ManagerPwd", "", new { @class = "form-control", placeholder = "密码" })
                </div>
            </div>
        </div>
        <div class="row rowmb5">
            <div class="col-md-12">
                <label class="col-sm-2 edit-group-label"> 重复密码：</label>
                <div class="col-md-3">
                    @Html.Password("re_password", "", new { @class = "form-control", placeholder = "重复密码" })
                </div>
            </div>
            @Html.HiddenFor(m => m.ManagerId)
        </div>
        <div class="row" style="margin:20px 0px;">
            <div class="col-md-2">
                <div style="padding-left: 115px;">
                    <a class="btn btn-primary" id="btnSubmit"><i class="fa fa-save" style="margin-right:5px;"></i>提交保存</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section JSExtend{
    <script src="@Html.GetUrlContent("/Scripts/public/jquery.md5.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Html.GetUrlContent("/Scripts/WebManager/system/myaccount.js")"></script>
}